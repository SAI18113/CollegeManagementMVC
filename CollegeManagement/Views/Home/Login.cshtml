@model CollegeManagement.Models.User;

@{

    ViewData["Title"] = "Home Page";
    var returnUrl = ViewData["ReturnUrl"] as string;
}



<div class="text-center">
    <h1>
        <b> Login</b>
    </h1>
</div>
<br />
<br />
<div class="container">
    <form method="post" action="/Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)">
        <div class="row text-danger">
            @ViewBag.Message
        </div>
        <div class="row">

            <div class="col-md-6">

                <div class="form-outline">

                    <label><b>Email:</b></label>
                    <input asp-for="EmailId" class="form-control" placeholder="someone@miraclesoft.com" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>


                </div>
                <br />
                <div class="form-outline">
                    <label><b>Password:</b></label>
                    <input type="password" asp-for="UserPassword" class="form-control" placeholder="Password" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>


                </div>
                <br />

                <div>
                    @*<input type="button" id="btnLOGIN" value="LOGIN" onclick="location.href = '@Url.Action("Login", "Employee")'" />*@
                    <input type="submit" class="btn btn-primary" value="Login" />


                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

